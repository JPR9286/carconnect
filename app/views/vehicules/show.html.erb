
<div class="container mt-5">
  <div class="row">
    <div class="col-12 col-sm-6 col-md-6 col-lg-4">

        <div class="card-product card-product-show">
          <div class="card-photo-title d-flex flex-column ">
            <%= cl_image_tag @vehicule.photo.key, crop: :fill, height: 200, width: 200,  class: "card_image" %>
            <h3 class="m-0" ><%= @vehicule.model %></h3>
          </div>
          <div class="card-text d-flex align-items-center">
            <p><%= @vehicule.description %></p>
          </div>
          <strong> <p class="m-0"><%= @vehicule.prix %> euros</p></strong>
        </div>
    </div>
    <!-- Card Véhicule  -->
    <!-- Contenu du new booking -->
    <div class="col-lg-4 col-xs-12">
      <div class="text-center">
        <h3>Faites-vous plaisir</h3>
        <div class="booking" data-controller="toggle" >
          <div class="btn  btn-warning d-none" id="resabtn" data-action="click->toggle#fire" data-toggle-target="togglablebookingElement">
            réservation
          </div>
          <div data-toggle-target="togglableElement" >
            <div class="form-wrapper text-center">
              <h2>Réserver un véhicule</h2>
              <%= simple_form_for [@vehicule, @booking] do |f| %>
                <%= f.input :date_resa,
                              label: "Votre période de location",
                              as: :string,
                              required: false,
                              input_html: { data: { controller: "datepicker" } }  %>
                <%= f.input :commentaire %>
                <%= f.submit "Réserver" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
