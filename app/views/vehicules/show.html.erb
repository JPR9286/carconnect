<h1>affichage d'un véhicule</h1>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-xs-12">
      <!-- Contenu de l'image <h1>affichage d'un véhicule</h1> -->
      <div class="border text-center">
        <h1>Titre de la voiture</h1>
      </div>

      <!-- Deuxième div avec une grande image et deux petites images -->
      <div class="border">
        <div class="row d-flex">
          <div class="col-lg-8 col-xs-12">
            <%= image_tag "homard.png", alt: "Grande image", class: "img-fluid" %>
          </div>
          <div class="col-lg-4 col-xs-12">
            <div class="row">
              <div class="col-lg-12 col-sm-6">
                <%= image_tag "homard_mayo.png", alt: "Petite image 1", class: "img-fluid" %>
              </div>
              <div class="col-lg-12 col-sm-6">
                <%= image_tag "omar_sy.png", alt: "Petite image 2", class: "img-fluid" %>
              </div>
            </div>
          </div>
          </div>
        </div>
      </div>
      <!-- Troisième div -->
      <div class="border">
        <h2>affiche card du véhicule</h2>
      </div>
    </div>
    <div class="col-lg-4 col-xs-12">
      <!-- Contenu de la deuxième div ici -->
      <div class="border">
        <h2>affichage du booking du véhicule</h2>
      </div>
    </div>
  </div>
</div>

<br>
<%= link_to "Home page", root_path %>

</div>
