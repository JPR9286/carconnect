
<div class="container">
  <div class="row">
    <!-- Card Véhicule  -->
    <div class="card col-lg-8 col-xs-12">
      <!-- Titre annonce -->
      <div class="border text-center">
        <h2><%= @vehicule.model %></h2>
      </div>
      <!-- div images -->
      <div class="border">
        <div class="row d-flex">
          <div class="col-lg-8 col-xs-12">
            <%# <%= image_tag "homard.png", alt: "Grande image", class: "img-fluid" %>
            <%= cl_image_tag @vehicule.photo.key, height: 300, width: 400, crop: :fill %>
          </div>
        </div>
      </div>
      <!-- détail annonce -->
      <div class="border">
        <p class="text-center"><%= @vehicule.description %></p>
      </div>
    </div>
    <!-- Contenu du new booking -->
    <div class="card col-lg-4 col-xs-12">
      <div class="text-center">
        <h2>affichage du booking du véhicule</h2>
        <div class="btn btn-primary">réservation</div>
        <div class="border">
          <%= simple_form_for @booking do |f| %>
            <%= f.input :date_debut %>
            <%= f.input :date_fin %>
            <%= f.submit  %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>


