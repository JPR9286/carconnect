
<div class="container mt-5">
  <div class="row">
    <!-- Card Véhicule  -->
    <div class="card col-lg-8 col-xs-12">
      <!-- Titre annonce -->
      <div class="border text-center">
        <h2><%= @vehicule.model %></h2>
      </div>
      <!-- div images -->
      <div class="border">
        <div class="row d-flex">
          <div class="col-lg-10 col-xs-12">
            <%# <%= image_tag "homard.png", alt: "Grande image", class: "img-fluid" %>
            <%= cl_image_tag @vehicule.photo.key, height: 300, width: 400, crop: :fill %>
          </div>
        </div>
      </div>
      <!-- détail annonce -->
      <div class="border">
        <p class="text-center"><%= @vehicule.description %></p>
      </div>
    </div>
    <!-- Contenu du new booking -->
    <div class="col-lg-4 col-xs-12">
      <div class="text-center">
        <h3>Faites-vous plaisir</h3>
        <div class="booking" data-controller="toggle"  >

          <div id="booking-form-div"
            data-bookings="<%= @bookings_dates.to_json %>">
          </div>
          <div data-toggle-target="togglableElement" >
            <div class="form-wrapper text-center">
              <h2>Réserver un véhicule</h2>
              <%= simple_form_for [@vehicule, @booking] do |f| %>
                <%= f.input :date_debut,
                              label: "Votre période de location",
                              as: :string,
                              required: false,
                              input_html: { data: { controller: "datepicker" } }  %>
                <%= f.input :commentaire %>
                <%= f.submit "Réserver" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
