

<div class="category d-flex justify-content-center">
  <% [["Moto", "fa-solid fa-motorcycle"], ["Plat", "fa-solid fa-burger"], ["Char", "fa-solid fa-truck-monster"],
      ["Funny", "fa-solid fa-face-laugh-squint"]].each do |cat|  %>
    <%= link_to vehicules_path(query: cat[0]), class: "btn" do %>
      <span style="font-size:29px;"><i class="<%= cat[1] %>"></i></span>
    <% end %>

  <% end %>

  <%= link_to vehicules_path, class: "btn" do %>
    <i class="fa-solid fa-circle-xmark delete-icon"></i>
  <% end %>


    <%# <i class="fa-solid fa-circle-xmark"></i>
    <span style="font-size:29px"></span> %>

</div>

    <span style="font-size:29px"></span>

<div class="container card-container">

  <div class="row">
  <% @vehicules.each do |vehicule| %>
    <div class="col-12 col-sm-6 col-md-6 col-lg-4">

      <%= link_to vehicule_path(vehicule), style: "text-decoration: none; color: inherit;" do %>
        <div class="card-product">
          <div class="card-photo-title d-flex flex-column ">
            <%= cl_image_tag vehicule.photo.key, crop: :fill, height: 200, width: 200,  class: "card_image" %>
            <h3 class="m-0" ><%= vehicule.model %></h3>
          </div>
          <div class="card-text d-flex align-items-center">
            <p><%= vehicule.description %></p>
          </div>
          <strong> <p class="m-0"><%= vehicule.prix %> euros</p></strong>
        </div>
      <% end %>


   </div>
  <% end %>
  </div>
  
  <div style="width: 100%; height: 600px;"
  id="map"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
